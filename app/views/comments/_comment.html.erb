<div class="media">
  <%= link_to '#', class: 'pull-left' do %>
    <%= image_tag(comment.user.avatar.small.url) if comment.user.avatar? %>
  <% end %>
  <div class="media-body">
    <small><%= comment.user.name %> commented <%= time_ago_in_words(comment.created_at) %> ago</small>
    <p><%= comment.body %></p>
  </div>
</div>